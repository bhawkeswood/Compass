<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<a class="brand" href="#">COMPASS</a>
			<div class="nav-collapse collapse">
				<% if logged_in? %>
				<ul class="nav">
					<li class="<%= 'active' if current_page? deals_path %>">
						<%= link_to " Incomplete Tasks <span class='badge'>#{sum_of_incomplete_tasks(@deals)}</span>".html_safe, :deals %>
					</li>
					<li class="<%= 'active' if current_page? new_deal_path %>">
						<%= link_to 'Create a New Deal'.html_safe, new_deal_path %>
					</li>
					<li class="<%= 'active' if current_page? complete_path %>">
						<%= link_to 'Completed List'.html_safe, complete_path %>
					</li>
					<li class="navbar-form navbar-left">
						<%= search_form_for @search do |f| %>
							<%= f.text_field :project_name_cont, placeholder: "Deal Name Contains" %>
							<%= f.submit %>
						<% end %>
					</li>
				</ul>
				<% end %>
					<div class="pull-right">
								<% if logged_in? %>
									<%= link_to 'Logout', logout_path, class: 'btn btn-default' %>
								<% end %>
					</div>
			</div>
		</div>		
	</div>
</div>