<div class="hero-unit">
<h1>Incomplete Tasks</h1>

	<% @deals.each do |deal| %>
	<button type="button" class="btn btn-danger btn-lg btn-block"><%= link_to deal.project_name, deal %></button>
		<% deal.incomplete_tasks.each do |task| %>
			<p>
          <input type="checkbox" data-task-id="<%= task_path(task) %>" class="incomplete">
					<%= task.description %>
            <strong>|| Date Due: <%= task.due_date %></strong>  
			</p>
		<% end %>
		<br/>
	<% end %>
</div>

